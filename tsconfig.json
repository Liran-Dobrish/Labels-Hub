{
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "DOM",
            "ES2020"
        ],
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/*"
            ]
        },
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}