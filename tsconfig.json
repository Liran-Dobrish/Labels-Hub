{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020", "es5", "es6", "dom", "es2015.promise"],
    "jsx": "react",
    "module": "amd",
    "moduleResolution": "node",
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": []
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
